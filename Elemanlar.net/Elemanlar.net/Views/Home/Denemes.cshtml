@model IEnumerable<EntityLayer.IsIlanlariViewModel>
@{
    ViewData["Title"] = "Denemes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-5">
    <div class="container">
        <div class="row align-items-end mb-4">
            <div class="col-lg-12 text-center">               
                <h1  class="section-title mb-3 fontfamily">Senin için önerilen ilanlar</h1>
            </div>
            
        </div>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-6 mb-5" style="background-color:white;">
                    <div class="position-relative mb-4">
                        <img class="img-fluid rounded w-100" src="@item.FirmaFoto" alt="">
                        <div class="blog-date">
                            <h4 class="font-weight-bold mb-n1">@item.YayınlanmaTarihi.Day</h4>
                            <small class="font-weight-bold mb-n1">@item.YayınlanmaTarihiAy</small>
                        </div>
                    </div>
                    <div class="d-flex mb-2">
                        <a class="firmaismi">@item.FirmaIsmi</a>
                    </div>
                    <h5 class="font-weight-medium mb-2">@item.IlanIsmi</h5>
                    <p class="mb-4">@item.IlanIcerigi.Substring(0, item.IlanIcerigi.Substring(0, 35).LastIndexOf(""))...</p>
                    <a class="btn btn-sm btn-primary py-2" href="/Home/IlaniIncele/@item.IlanId/">İlanı Incele</a>
                </div>
            }
          
            <div class="col-12">
                <nav aria-label="Page navigation">
                    <ul class="pagination pagination-lg justify-content-center mb-0">
                        <li class="page-item disabled">
                            <a class="page-link" href="#" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                                <span class="sr-only">Previous</span>
                            </a>
                        </li>
                        <li class="page-item active"><a class="page-link" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item">
                            <a class="page-link" href="#" aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                                <span class="sr-only">Next</span>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>
<style>
    .fontfamily {
        font-family: "Arial, Helvetica", sans-serif;
        color:seagreen;
    }
    .firmaismi {
        color: black;
    }
</style>